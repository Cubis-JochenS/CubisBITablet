<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/singleboxlayout"
    android:layout_width="fill_parent"
    android:layout_height="59dp"
    android:minHeight="59dp"
    android:orientation="vertical"
    android:background="@drawable/doument_list_selector"
    >    
    
   <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"        
        android:orientation="horizontal"
        android:layoutDirection="locale"
         >
        
		<ImageView 
		    	android:id="@+id/list_doctype_image"
 			    android:layout_width="0dp"
 			    android:layout_height="wrap_content"
 			    android:layout_weight="0.085"
				android:padding="6dp"
				android:layout_gravity="center_vertical"
 		/>
	  <LinearLayout
	        android:id="@+id/linearLayout2"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"        
	        android:orientation="horizontal"
	        android:layoutDirection="locale"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="0.731"
	        >
 				<TextView
		            android:id="@+id/tvdocname"
		            style="@style/TextMedium.list"
		            android:layout_width="0dp"
		            android:gravity="left|start"
	        		android:textAlignment="viewStart"
		            android:layout_gravity="center_vertical"
		            android:layout_height="wrap_content" 
		            android:layout_weight=".7"/>
 				<TextView
 				    style="@style/TextSmall.list"
	                android:layout_gravity="center_vertical"
	                android:id="@+id/tvdocupdatetime"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content" 
	                android:layout_weight=".3"/>

	     </LinearLayout>	     
 		<RelativeLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"        
	        android:layout_gravity="center_vertical"
	        android:layout_weight="0.143"
 		    >
            <ImageButton
	        android:id="@+id/btn_download"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/home_download_selector"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentStart="true"
            />
            <ImageView
	        android:id="@+id/img_progressbar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentStart="true"
	        android:visibility="gone"
            />   
           <ImageButton
	        android:id="@+id/btn_info"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentEnd="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/home_more_selector"/> 
      </RelativeLayout>
      <ImageView
	        android:id="@+id/img_fav"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:src="@drawable/home_thumbnail_favorited"
	        android:visibility="invisible"
	        android:layout_marginTop="-3dp" 
	        android:layout_marginLeft="8dp"
	        android:layout_marginStart="8dp"
	        android:layout_weight=".03"/>
    </LinearLayout>   
</LinearLayout>
