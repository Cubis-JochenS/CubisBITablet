<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
	android:background="@color/white">

    <!-- header -->

    <LinearLayout
        android:id="@+id/Header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ap_app_header_text"
            style="@style/TextMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="12dp"
            android:text="@string/app_enter_pwd"
            android:textColor="@color/text_header" />

        <View
            android:id="@+id/seperator1"
            style="@style/DialogTitleSeperator" />
    </LinearLayout>

    <!-- Content -->


    <!-- On Switching Apps -->
    <!-- On Disable being selected -->
    <!-- On Enter App Password -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ap_app_pwd"
            style="@style/TextMedium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="16dp" />

        <EditText
            android:id="@+id/ap_app_pwd_text"
            style="@style/TextMedium.EditTextBoxStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editbox"
            android:hint="@string/required"
            android:inputType="textPassword"
            android:paddingBottom="16dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="16dp" >
        </EditText>
    </LinearLayout>
    <!-- footer -->

    <LinearLayout
        android:id="@+id/ap_footer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.03"
        android:orientation="vertical" >

        <View
            android:id="@+id/footer_seperator"
            style="@style/DialogFooterSeperator" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="locale"
            >

            <Button
                android:id="@+id/ap_app_pwd_pos"
                style="@style/TextMedium"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.45"
                android:background="@drawable/button_dialog"
                android:enabled="false"
                android:text="@string/next"
                android:textColor="@color/text_subheader" />

            <ImageView
                android:id="@+id/ver_seperator"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/text_subheader" />

            <Button
                android:id="@+id/ap_app_pwd_neg"
                style="@style/TextMedium"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.45"
                android:background="@drawable/button_dialog"
                android:text="@string/cancel" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>