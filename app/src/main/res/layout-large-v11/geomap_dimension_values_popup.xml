<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/DimensionValuePopUpView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/map_dimension_summary_border">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/DimensionsPopUpView"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:layoutDirection="locale"
    android:background="@color/black">
    
        <ImageView
            android:id="@+id/backToDimensionsImageView1"
            android:layout_width="18dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/backToDimensionsImageView1"
            android:layout_toEndOf="@id/backToDimensionsImageView1"
            android:contentDescription="@string/choose_value"
            android:src="@drawable/nav_back_button" />
        
        <Button
            android:id="@+id/backToDimensionsButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:alpha="100"
            android:background="@color/black"
            android:layout_toRightOf="@id/backToDimensionsImageView1"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/backToDimensionsImageView1"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <CheckBox
            android:id="@+id/dimensionAllValuesCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/backToDimensionsButton"
            android:layout_alignBottom="@+id/backToDimensionsButton"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/dimensionAllText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/dimensionAllValuesCheckbox"
            android:layout_toStartOf="@+id/dimensionAllValuesCheckbox"
            android:text="@string/ALL" 
            android:textSize="15sp"
            android:textColor="@color/white"/>
        
    </RelativeLayout>
    
    <ListView
        android:id="@+id/dimensionValueList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

	</ListView>

</LinearLayout>
