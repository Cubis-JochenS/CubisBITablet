<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/logger_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" 
    android:background="@color/settings_details_background"
    >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingLeft="12dp"
          android:paddingStart="12dp"
          android:layout_marginTop="32dp"
          android:paddingRight="10dp"
          android:paddingEnd="10dp"
          >

          <View
              style="@style/SettingsDetailsSeparator"
              android:background="@color/settings_view_separator" />
      </LinearLayout>

    <LinearLayout
        android:id="@+id/xc_settings_layout"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layoutDirection="locale"
         >

        <TextView
            android:id="@+id/xc_offline_dataset"
            style="@style/ConnectionListElementsSmall"
            android:layout_width="0dp"
            android:layout_weight="0.70"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/xc_offline_dataset"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/settings_view_text" >
        </TextView>

        <Button
            android:id="@+id/esb_change_offline_data_set"
            style="@style/ConnectionListElementsSmall"
            android:layout_width="0dp"
            android:layout_weight="0.30"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner"
            android:layout_alignBaseline="@+id/xc_offline_dataset"
            android:layout_alignBottom="@+id/xc_offline_dataset"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium" 
             />
    </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingLeft="12dp"
          android:paddingRight="10dp"
          android:paddingStart="12dp"
          android:paddingEnd="10dp"
           >

          <View
              style="@style/SettingsDetailsSeparator"
              android:background="@color/settings_view_separator" />
      </LinearLayout>

    <LinearLayout
        android:id="@+id/sdk_storage"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layoutDirection="locale"
         >

        <TextView
            android:id="@+id/xc_sdk_storage"
            style="@style/ConnectionListElementsSmall"
            android:layout_width="0dp"
            android:layout_weight="0.70"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="@string/xc_sdk_storage"
            android:textColor="@color/settings_view_text" />

        <Button
            android:id="@+id/esb_change_sdk_offline"
            style="@style/ConnectionListElementsSmall"
            android:layout_width="0dp"
            android:layout_weight="0.30"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_alignBaseline="@+id/xc_sdk_storage"
            android:layout_alignBottom="@+id/xc_sdk_storage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/spinner"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingLeft="12dp"
          android:paddingRight="10dp"
          android:paddingStart="12dp"
          android:paddingEnd="10dp"
           >

          <View
              style="@style/SettingsDetailsSeparator"
              android:background="@color/settings_view_separator" />
      </LinearLayout>

</LinearLayout>