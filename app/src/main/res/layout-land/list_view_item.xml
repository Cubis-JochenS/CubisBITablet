<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/singleboxlayout"
    android:layout_width="fill_parent"
    android:layout_height="59dp"
    android:minHeight="59dp"
    android:orientation="vertical"
    android:background="@drawable/doument_list_selector"
    >    
    
   <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"        
        android:orientation="horizontal"
        android:layoutDirection="locale"
       >
        
		<ImageView 
		    	android:id="@+id/list_doctype_image"
 			    android:layout_width="0dp"
 			    android:layout_height="wrap_content"
 			    android:layout_weight="0.1"
				android:padding="6dp"
				android:layout_gravity="center_vertical"
 		/>
	   <LinearLayout
	        android:id="@+id/linearLayout2"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"        
	        android:orientation="vertical"
	        android:layout_gravity="center_vertical"
	        android:layout_weight="0.7"
	        >
 				<TextView
		            android:id="@+id/tvdocname"
		            style="@style/TextMedium.list"
		            android:gravity="left|start"
	        		android:textAlignment="viewStart"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" />
 				<TextView
 				    style="@style/TextSmall.list"
	                android:gravity="center_vertical|left|start"
	        		android:textAlignment="viewStart"
	                android:id="@+id/tvdocupdatetime"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" />
	     </LinearLayout>	     
 		<RelativeLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"        
	        android:layout_gravity="center_vertical"
	        android:layout_weight="0.15"
 		    >
            <ImageButton
	        android:id="@+id/btn_download"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
	        android:background="@drawable/home_download_selector"
            />
            <ImageView
	        android:id="@+id/img_progressbar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
	        android:visibility="gone"
            />   
           <ImageButton
	        android:id="@+id/btn_info"
	        android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/home_more_selector"/> 
      </RelativeLayout>
      <ImageView
	        android:id="@+id/img_fav"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:src="@drawable/home_thumbnail_favorited"
	        android:visibility="invisible"
	        android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
          android:layout_weight=".04"/>
    </LinearLayout>  

</LinearLayout>
