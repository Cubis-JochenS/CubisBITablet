<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/logger_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:descendantFocusability="afterDescendants"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp" >

    <RelativeLayout
        android:id="@+id/workoffline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="locale"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/txt_work_offline"
            style="@style/ConnectionAddElementsSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/esb_enable_app_pwd_toggle"
            android:paddingLeft="30dp"
            android:layout_toStartOf="@+id/esb_enable_app_pwd_toggle"
            android:paddingStart="30dp"
            android:text="@string/work_offline"
            android:textColor="@color/settings_view_text" >
        </TextView>

        <CheckBox
            android:id="@+id/work_offline_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:button="@drawable/checkbox"
            android:padding="10dp" >
        </CheckBox>
    </RelativeLayout>

    <View
        android:id="@+id/cl_separator2"
        style="@style/ConnectionLineSep"
        android:layout_below="@id/workoffline"
        android:background="@color/settings_view_separator" >
    </View>

</RelativeLayout>