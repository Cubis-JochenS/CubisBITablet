<?xml version="1.0" encoding="utf-8"?>                                      
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"    
    >
<EditText  
    android:id="@+id/customView" 
    android:gravity="left|start"
    android:background="@drawable/color1" 
    android:layout_width="200dp" 
    android:layout_height="250dp" 
    android:textColor="@android:color/black"    
    android:layout_centerInParent="true"
    android:textCursorDrawable="@null" 
    android:inputType="text|textMultiLine"
    />

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_view_linear_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"  
    android:layout_marginLeft="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="60dp"
    android:layout_alignTop="@+id/customView" 
    android:layout_toRightOf="@+id/customView"
    android:layout_toEndOf="@+id/customView"
    android:orientation="vertical"
    >

<ImageView
    android:id="@+id/delete"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"    
    android:background="@drawable/annotate_text_delete"
    android:gravity="center_vertical"/>
    
<ImageView
    android:id="@+id/color_selector"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"    
    android:background="@drawable/annotate_text_color_pad"
    android:gravity="center_vertical" 
    android:layout_marginTop="5dp"/>

<ImageView
    android:id="@+id/resize"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"    
    android:background="@drawable/annotate_text_resize_view"
    android:gravity="center_vertical"
    android:layout_alignBottom="@+id/customView"
    android:layout_toRightOf="@+id/customView"
    android:layout_toEndOf="@+id/customView"
    android:layout_marginTop="5dp"/>

</LinearLayout>

</RelativeLayout>