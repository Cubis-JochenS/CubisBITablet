<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/singleboxlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/largeboxbackground" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="locale"
        >

        <ImageView
            android:id="@+id/chartimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="40dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="40dp"
            android:src="@drawable/home_thumbnail_dual_bar_48" >
        </ImageView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="40dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quarter Sales By Territory 10 TAB"
                    android:textColor="@color/black"
                    android:textSize="18sp" 
                    android:id="@+id/sbl_docName">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Updated Yesterday"
                    android:textColor="@color/gold"
                    android:textSize="14sp" 
                    android:id="@+id/sbl_updateDate">
                </TextView>
            </LinearLayout>
        <ImageView  android:layout_width="wrap_content" android:layout_height="wrap_content"
	    android:src="@drawable/home_add_connection_48" android:id="@+id/nextimg" android:layout_alignParentRight="true" android:layout_alignParentEnd="true" android:paddingTop="10dp" android:paddingBottom="10dp"
	    android:paddingLeft="5dp" android:paddingRight="5dp"></ImageView>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>