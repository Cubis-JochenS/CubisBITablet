<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ddl_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:orientation="vertical"
	android:background="@color/white">   
            
    <!-- header -->         
            
    <LinearLayout
        android:id="@+id/Header"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.03"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/header_text"
            style="@style/TextMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="12dp"
            android:textColor="@color/text_header" />

        <View
            android:id="@+id/hor_seperator"
            style="@style/DialogTitleSeperator" />
                
    </LinearLayout>
    
    <!-- content -->  
    <!-- Scrollable Views -->
 	
 	<ScrollView
        android:id="@+id/srollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.94">

        <LinearLayout
            android:id="@+id/info_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             android:orientation="vertical">
             
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
                android:layoutDirection="locale"
		        android:layout_gravity="center"
		        android:padding="5dp" >
		    
		        <TextView       
		            android:layout_width="0px"
		            android:layout_height="wrap_content"
		            android:layout_weight="0.35"
		            android:text="@string/name"
		            android:textColor="@color/text_header" >
		        </TextView>
		        
		        <TextView
		            android:id="@+id/ddl_docname"
		            android:layout_width="0px"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:layout_weight="0.65"
		            android:gravity="left|start"
                    android:textAlignment="viewStart"
		            android:textColor="@color/black" >
		        </TextView>
		        
		    </LinearLayout>
	
		    <LinearLayout android:id="@+id/ddl_author_layout"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:orientation="horizontal"
                android:layoutDirection="locale"
		        android:padding="5dp" >
		
		        <TextView
		            android:layout_width="0px"
		            android:layout_height="wrap_content"
		            android:layout_weight="0.35"
		            android:text="@string/author"
		            android:textColor="@color/text_header" >
		        </TextView>
		
		        <TextView
		            android:id="@+id/ddl_author"
		            android:layout_width="0px"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:layout_weight="0.65"
		            android:gravity="left|start"
                    android:textAlignment="viewStart"
		            android:textColor="@color/black" >
		        </TextView>
		    </LinearLayout>
		    
		    <LinearLayout android:id="@+id/ddl_parent_id_layout"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:orientation="horizontal"
                android:layoutDirection="locale"
		        android:padding="5dp" >
		
		        <TextView
		            android:layout_width="0px"
		            android:layout_height="wrap_content"
		            android:layout_weight="0.35"
		            android:text="@string/parent_doc_name"
		            android:textColor="@color/text_header" >
		        </TextView>
		
		        <TextView
		            android:id="@+id/ddl_parent_doc_name"
		            android:layout_width="0px"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:layout_weight="0.65"
		            android:gravity="left|start"
                    android:textAlignment="viewStart"
		            android:textColor="@color/black" >
		        </TextView>
		    </LinearLayout>
	
	
		    <LinearLayout
		        android:id="@+id/ddl_dwnldtime_layout"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:orientation="horizontal"
                android:layoutDirection="locale"
		        android:padding="5dp"
		        android:visibility="gone" >
		
		        <TextView
		            android:layout_width="0px"
		            android:layout_height="wrap_content"
		            android:layout_weight="0.35"
		            android:text="@string/downloaded_at"
		            android:textColor="@color/text_header" >
		        </TextView>
		
		        <TextView
		            android:id="@+id/ddl_dwnldtime"
		            android:layout_width="0px"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:layout_weight="0.65"
		            android:gravity="left|start"
                    android:textAlignment="viewStart"
		            android:textColor="@color/black" >
		        </TextView>
		    </LinearLayout>
	
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:orientation="horizontal"
                android:layoutDirection="locale"
		        android:padding="5dp" >
		
		        <TextView
		            android:layout_width="0px"
		            android:layout_height="wrap_content"
		            android:layout_weight="0.35"
		            android:text="@string/modified_at"
		            android:textColor="@color/text_header" >
		        </TextView>
		
		        <TextView
		            android:id="@+id/ddl_modfytime"
		            android:layout_width="0px"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:layout_weight="0.65"
		            android:gravity="left|start"
                    android:textAlignment="viewStart"
		            android:textColor="@color/black" >
		        </TextView>
		    </LinearLayout>
			
		        <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:orientation="horizontal"
                android:layoutDirection="locale"
		        android:padding="5dp" >
		
		        <TextView
		            android:layout_width="0px"
		            android:layout_height="wrap_content"
		            android:layout_weight="0.35"
		            android:text="@string/type"
		            android:textColor="@color/text_header" >
		        </TextView>
		
		        <TextView
		            android:id="@+id/ddl_type"
		            android:layout_width="0px"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:layout_weight="0.65"
		            android:gravity="left|start"
                    android:textAlignment="viewStart"
		            android:textColor="@color/black" >
		        </TextView>
		    </LinearLayout>
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:orientation="horizontal"
                android:layoutDirection="locale"
		        android:padding="5dp" >
		
		        <TextView
		            android:layout_width="0px"
		            android:layout_height="wrap_content"
		            android:layout_weight="0.35"
		            android:text="@string/description"
		            android:textColor="@color/text_header" >
		        </TextView>
		
		        <TextView
		            android:id="@+id/ddl_desc"
		            android:layout_width="0px"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:layout_weight="0.65"
		            android:gravity="left|start"
                    android:textAlignment="viewStart"
		            android:textColor="@color/black" >
		        </TextView>
		    </LinearLayout>
		
		    <LinearLayout
		        android:id="@+id/ddl_ttl_layout"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:orientation="horizontal"
                android:layoutDirection="locale"
		        android:padding="5dp"
		        android:visibility="gone" >
		
		        <TextView
		            android:id="@+id/ddl_ttl"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="left|start"
		            android:gravity="left|start"
                    android:textAlignment="viewStart"
		            android:text="@string/document_delete"
		            android:textColor="@color/black" >
		        </TextView>
		    </LinearLayout>
    	</LinearLayout>
    </ScrollView>	    
    
 	<!-- footer -->  
 	
    <LinearLayout 
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.03"
        android:orientation="vertical" >   
           
	    <LinearLayout 
	        android:id="@+id/footer_seperator"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	
	 	<View
			android:id="@+id/doc_info_footer_seperator"
			style="@style/DialogFooterSeperator"/>
		
		</LinearLayout>	   	
   
	    <LinearLayout
	        android:id="@+id/doc_info_footer"
	        android:layout_width="fill_parent"
	        android:layout_height="40dp"
	        android:orientation="horizontal"
            android:layoutDirection="locale"
            >
	
	        <Button
	            android:id="@+id/pos"
	            style="@style/TextSmall"
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent"
	            android:layout_gravity="center_vertical"
	            android:background="@drawable/button_dialog"
	            android:text="@string/ok" />
	            
	    </LinearLayout>        
 	</LinearLayout>  
</LinearLayout>