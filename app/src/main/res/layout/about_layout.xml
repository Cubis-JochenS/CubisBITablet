<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@color/settings_details_background" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/logger_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="afterDescendants"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >
		<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:paddingLeft="12dp"
        android:paddingRight="8dp"
        android:paddingStart="12dp"
        android:paddingEnd="8dp"
            >

        <View
            style="@style/SettingsDetailsSeparator"
            android:background="@color/settings_view_separator" />
    </LinearLayout>
            
        <RelativeLayout
            android:id="@+id/version"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layoutDirection="locale"
             >

            <TextView
                android:id="@+id/txt_version"
                style="@style/ConnectionListElementsSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="30dp"
                android:paddingStart="30dp"
                android:text="@string/version"
                android:textColor="@color/settings_view_text" />

            <TextView
                android:id="@+id/txt_ver_num"
                style="@style/ConnectionListElementsSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/versionNumber"
                android:textColor="@color/settings_view_text" />
        </RelativeLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="8dp"
        android:paddingStart="12dp"
        android:paddingEnd="8dp"
            >

        <View
            style="@style/SettingsDetailsSeparator"
            android:background="@color/settings_view_separator" />
    </LinearLayout>
            

        <RelativeLayout
            android:id="@+id/build"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layoutDirection="locale"
             >

            <TextView
                android:id="@+id/txt_build"
                style="@style/ConnectionListElementsSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="30dp"
                android:paddingStart="30dp"
                android:text="@string/build"
                android:textColor="@color/settings_view_text" >
            </TextView>

            <TextView
                android:id="@+id/txt_build_num"
                style="@style/ConnectionListElementsSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/buildNumber"
                android:textColor="@color/settings_view_text" />
        </RelativeLayout>

       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="8dp"
        android:paddingStart="12dp"
        android:paddingEnd="8dp"
           >

        <View
            style="@style/SettingsDetailsSeparator"
            android:background="@color/settings_view_separator" />
    </LinearLayout>
            
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/one_border" >
        </View>

        <Button
            android:id="@+id/show_legal_button"
            style="@style/ConnectionListElementsSmall"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/button_selector_white"
            android:gravity="center"
            android:text="@string/legal"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>