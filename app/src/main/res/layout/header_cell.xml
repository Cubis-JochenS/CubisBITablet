<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="12dp" >

    
    <ImageView
        android:id="@+id/hc_dnd_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/table_reorder"/>
    
    <ImageView
        android:id="@+id/hc_freeze_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
		android:layout_alignParentRight="true"
		android:paddingLeft="12dp"
        android:layout_alignParentEnd="true"
        android:paddingStart="12dp"
        android:src="@drawable/table_freeze" />

    <ImageView
        android:id="@+id/hc_visibility_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/hc_freeze_img"
        android:layout_toStartOf="@id/hc_freeze_img"
        android:src="@drawable/table_hide" />

    <TextView
        android:id="@+id/hc_cell_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/hc_dnd_img"
        android:layout_toLeftOf="@id/hc_visibility_img"
        android:layout_toEndOf="@id/hc_dnd_img"
        android:layout_toStartOf="@id/hc_visibility_img"
        android:singleLine="true"
        android:ellipsize="end" 
        style="@style/TextMedium"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingTop="2dp">
    </TextView>

</RelativeLayout>