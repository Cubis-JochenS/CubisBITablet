<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:paddingLeft="8dp" android:paddingRight="8dp">
<LinearLayout
        android:id="@+id/Header"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.03"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/header_text"
            style="@style/TextMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="12dp"
            android:textColor="@color/text_header" />

        <View
            android:id="@+id/hor_seperator"
            style="@style/DialogTitleSeperator" />
                
    </LinearLayout>
    <TextView
        android:id="@+id/message_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" android:layout_marginTop="3dp" android:layout_marginBottom="3dp" />
<LinearLayout 
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.03"
        android:orientation="vertical" >   
           
	    <LinearLayout 
	        android:id="@+id/footer_seperator"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	
	 	<View
			android:id="@+id/doc_info_footer_seperator"
			style="@style/DialogFooterSeperator"/>
		
		</LinearLayout>	   	
   
	    <LinearLayout
	        android:id="@+id/doc_info_footer"
	        android:layout_width="fill_parent"
	        android:layout_height="40dp"
	        android:orientation="horizontal"
            android:layoutDirection="locale"
            >
	
	        <Button
	            android:id="@+id/pos"
	            style="@style/TextSmall"
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent"
	            android:layout_gravity="center_vertical"
	            android:background="@drawable/button_dialog"
	            android:text="@string/ok" />
	            
	    </LinearLayout>        
 	</LinearLayout>
</LinearLayout>