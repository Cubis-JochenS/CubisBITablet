<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
     
    <CheckBox
        android:id="@+id/filter_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:focusable="false"
		android:focusableInTouchMode="false"
        
        />
     
     
    <TextView
       	android:layout_marginTop="8dp"
        android:id="@+id/filter_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/filter_checkbox"
        android:layout_toEndOf="@id/filter_checkbox"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        />
     
    
    <TextView
        android:layout_marginTop="8dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:id="@+id/filter_distinctcount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/filter_value"
        android:layout_toEndOf="@id/filter_value"
        android:gravity="right|end"
        android:textAlignment="viewEnd"
     />
     
</RelativeLayout>