<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quickref_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/settings_details_background"
    android:descendantFocusability="afterDescendants"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/quickeref_text"
        style="@style/TextMedium"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="@string/quickref_launch_text"
        android:textColor="@color/settings_view_text" />

    <Button
        android:id="@+id/quickref_launchbutton"
        style="@style/TextSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:background="@drawable/button"
        android:padding="12dp"
        android:text="@string/quickref_launchbutton_text" />

</LinearLayout>