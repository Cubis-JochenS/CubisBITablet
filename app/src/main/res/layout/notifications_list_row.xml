<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/conlist_row_layout"
    android:layout_width="fill_parent"
    android:layout_height="68dp"
    android:background="@drawable/button_selector_white"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:clickable="false"
    >
        <ImageView
            android:id="@+id/docTypeImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|left|start"
            android:textAlignment="viewStart"
            android:layout_marginLeft="-12dp"
            android:layout_marginStart="-12dp"
            android:descendantFocusability="blocksDescendants"
             >
        </ImageView>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="68dp"
	    android:orientation="vertical"
	    android:layout_gravity="center_vertical" 
	    android:gravity="center_vertical"
	    android:layout_toRightOf="@id/docTypeImage"
        android:layout_toEndOf="@id/docTypeImage"
	    >
        <TextView
            android:id="@+id/docTitle"
            style="@style/TextMedium.gridDoc"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left|start"
            android:textAlignment="viewStart"
            android:text="@+id/label"
            android:maxWidth="100dp"
			android:ellipsize="end" 
			android:singleLine="true"
			android:layout_centerVertical="true"
			android:textColor="@color/autoupdate_title"
            android:textSize="16sp"
            android:textStyle="normal"
            android:descendantFocusability="blocksDescendants"
             >
        </TextView>
        <TextView
            android:id="@+id/time"
            style="@style/TextMedium.gridDoc"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left|start"
            android:textAlignment="viewStart"
            android:maxWidth="100dp"
			android:ellipsize="end" 
			android:singleLine="true"
			android:layout_centerVertical="true"
			android:visibility="visible"
			android:text="@string/Minutes"
            android:textColor="@color/autoupdate_subtitle"
            android:textSize="12sp"
            android:textStyle="normal"
            android:descendantFocusability="blocksDescendants"
            >             
        </TextView>
</LinearLayout>
        <ImageView
	        android:id="@+id/btn_update"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
	        android:duplicateParentState="false"
            android:background="@drawable/home_document_update_selector"
	        android:layout_centerVertical="true"
	        android:padding="10dp"
	        android:descendantFocusability="blocksDescendants"
            />
        <ImageView
	        android:id="@+id/progressImage"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
	        android:layout_centerVertical="true"
	        android:visibility="gone"
	        android:descendantFocusability="blocksDescendants"
            /> 
</RelativeLayout>