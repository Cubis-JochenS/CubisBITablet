<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="15dip" />
            <gradient android:startColor="#BDBDBC" android:centerColor="#BDBDBC"
                android:centerY="0.75" android:endColor="#BDBDBC" android:angle="90" />
            <stroke android:width="1dp" android:color="#BDBDBC" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="25dip" />
                <gradient android:startColor="#009DE0" android:endColor="#009DE0"
                    android:angle="90" />
                <stroke android:width="1dp" android:color="#009DE0" />
            </shape>
        </clip>
    </item>
</layer-list>